<div id="post_show_content" class="skinny_wrapper wrapper_padding">

  <header>
    <p class="date"><%= @post.created_at.strftime("%A, %B %d") %></p>
    <h1><%= @post.title %></h1>
    <hr id="post_content">
  </header>

  <div class="content">
    <%= @post.content %>
  </div>

  <hr id="post_content">

  <div id="share_box">
    <p>Share '<%= @post.title %>'</p>
    <!-- Twitter -->
    <a onclick="javascript:window.open('https://twitter.com/share?text=<%= @post.title %> by Rahul Malhotra - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
      <i class="fa fa-twitter"></i>
    </a>
    <!-- Facebook -->
    <a onclick="javascript:window.open('https://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank','width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook"></i></a>
    <!-- Google Plus -->
    <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank','width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus"></i></a>
  </div>

  <hr id="post_content">
</div>
